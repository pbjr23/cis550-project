                <option value="1.0">At least 1.0 stars</option>
                <option value="1.5">At least 1.5 stars</option>
                <option value="2.0">At least 2.0 stars</option>
                <option value="2.5">At least 2.5 stars</option>
                <option value="3.0">At least 3.0 stars</option>
                <option value="3.5">At least 3.5 stars</option>
                <option value="4.0">At least 4.0 stars</option>
                <option value="4.5">At least 4.5 stars</option>
                <option value="5.0">At least 5.0 stars</option>
              </select>
            </div>

            <div>
              <h4>Select ranking preference</h4>
              <select id="preference" onchange="calculateRestaurants();">
                <option value="distance">Prefer less distance</option>
                <option value="stars">Prefer better restaurants</option>
                <option value="combo">Prefer combination</option>
              </select>
            </div>

          </div>
        </div>
      </div>

      <h2 style="color:#eee; font-size: 40px;">List of Restaurants</h2>
      <div id="restaurantResults" class="row">

      </div>

    </div>
  </div>
  <div id="control">
    <strong>Restaurant:</strong>
    <select id="end" onchange="calcRoute();">
    </select>
    <select id="mode" onchange="calcRoute();">
      <option id="walk" value="WALKING">Walking</option>
      <option id="car" value="DRIVING">Driving</option>
      <option id="bike" value="BICYCLING">Bicycling</option>
    </select>
  </div>
  <div id="directions-panel"></div>
  <div id="map-canvas"></div>
</body>